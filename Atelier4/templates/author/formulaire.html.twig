{# templates/author/formulaire.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
    Add Author
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">
            Add Author
        </h1>

        <div class="row justify-content-center">
            <div class="col-lg-6">
                {{ form_start(f) }}

                <div class="form-group">
                    {{ form_row(f.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(f.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                </div>

                <div class="form-group text-center">
                    {{ form_row(f.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                
                <div class="form-group">
               {{ form_row(f.nb_books, {'attr': {'class': 'form-control', 'placeholder': 'Number of Books'}}) }}
               </div>

                {{ form_end(f) }}
            </div>
        </div>
    </div>
{% endblock %}
